%section#main
  .sub-title{style: "background-image:url(#{image_url(object.main_image.to_s)});background-size: cover;background-position: 50% 50%;padding: 110px 0 50px;"}
    .container
      .sub-title-inner.pull-right
        %h2
          = object.name
  .container
    .row
      #content.site-content.col-md-8{role: :main}
        #posts_container
          = render posts.decorate
        #posts_pagination
          = paginate posts, url_new: object.slug_path, window: 8
      #sidebar.col-sm-4{role: :complementary}
        %aside.widget-area
          #filter_date{data: {date: Date.today.strftime()}}
          = hidden_field_tag 'input_filter_date'
          = render partial: 'news/partials/popular_news', locals: {news: popular_news}
          = render partial: 'news/partials/tags', locals: {tags: tags}
          = render partial: 'news/partials/categories_list', locals: {categories: categories}