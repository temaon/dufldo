%section#main
  .sub-title{style: "background-image:url(#{image_url(object.main_image)});background-size: cover;background-position: 50% 50%;padding: 110px 0 50px;"}
    .container
      .sub-title-inner.pull-right
        %h2
          = object.name
  .container
    .row
      #content.site-content.col-md-8{role: :main}
        - if object.content.present?
          = object.content.html_safe
        = render posts.decorate
        = paginate posts, url_new: object.slug_path, window: 8
      #sidebar.col-sm-4{role: :complementary}
        %aside.widget-area
          .themeum-title
            .themeum-title-icon
              %span.icon-bar
              %span.icon-bar
              %span.icon-bar
            %h2.widget_title
              %span Популярные
              Новости
          = render partial: 'news/partials/tags', locals: {tags: tags}
          = render partial: 'news/partials/categories_list', locals: {categories: categories}