%h1 Listing news

%table
  %thead
    %tr
      %th Title
      %th Short description
      %th Description
      %th
      %th
      %th

  %tbody
    - @news.each do |news|
      %tr
        %td= news.title
        %td= news.short_description
        %td= news.description
        %td= link_to 'Show', news
        %td= link_to 'Edit', edit_news_path(news)
        %td= link_to 'Destroy', news, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

